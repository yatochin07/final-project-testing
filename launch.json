{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug TicTacToeSFML",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/main",  // Path ke executable yang sudah dibangun
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",  // Menggunakan gdb untuk debugging
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb",  // Path ke gdb, sesuaikan jika perlu
            "preLaunchTask": "build",  // Memastikan build dilakukan sebelum menjalankan
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}